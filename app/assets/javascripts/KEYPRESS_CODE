  emailConfirmation.change(function(){
    emailConfVal = emailConfirmation.val();
    emailVal = email.val();
    console.log('email: ' + emailVal);
    console.log('confirm: ' + emailConfVal);
    emailConfError.show(); 
    if(emailVal === '' || emailConfVal===''){
      emailConfError.hide();
    }        
    else if (emailVal === emailConfVal){
      emailConfError.("Email entries match") ;
    }
    else {
      emailConfError.show() ;
    }
    
  }); /// HOW TO CHANGE EMAILCONFERROR ONCE EMAIL ENTRIES MATCH??
